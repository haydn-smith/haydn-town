{
    "plugins": ["@shufo/prettier-plugin-blade"],
    "overrides": [
        {
            "files": ["*.blade.php"],
            "options": {
                "parser": "blade",
                "tabWidth": 2,
                "sortTailwindcssClasses": true,
                "sortHtmlAttributes": "idiomatic",
                "extraLiners": "",
                "indentInnerHtml": true
            }
        }
    ]
}
